<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/cl_item_video_channel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp12"
    android:paddingVertical="@dimen/dp6"
    app:layout_behavior="ma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_videos_in_channel"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_title_video_channel"
            android:src="@drawable/test_iv_video_channel"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title_video_channel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_videos_in_channel"
            app:layout_constraintRight_toLeftOf="@id/iv_menu"
            android:layout_marginLeft="@dimen/dp12"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@string/v_a_h_c_v_a_nh_n_b_u_tr_i_xanh_tuy_t_p_h_c_c_ng_t_i_b_s_u_t_p_nh_c_n_n_xu_t_1_gi"
            android:textSize="@dimen/dp14"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_title_video_channel"
            app:layout_constraintLeft_toRightOf="@id/tv_title_video_channel"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_menu_vertical"/>

        <TextView
            android:id="@+id/tv_amount_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_video_channel"
            app:layout_constraintLeft_toLeftOf="@id/tv_title_video_channel"
            android:layout_marginTop="@dimen/dp4"
            android:text="@string/_102k_views"
            android:textColor="@color/color51"
            android:textSize="@dimen/dp12"/>

        <View
            android:id="@+id/view_dot"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toRightOf="@id/tv_amount_view"
            app:layout_constraintTop_toTopOf="@id/tv_amount_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount_view"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@color/color51"/>

        <TextView
            android:id="@+id/tv_time_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/view_dot"
            app:layout_constraintTop_toTopOf="@id/view_dot"
            app:layout_constraintBottom_toBottomOf="@id/view_dot"
            android:layout_marginLeft="@dimen/dp12"
            android:text="@string/_10_month_ago"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color51"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>